<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
>
	<EditTextPreference
		android:key="@string/preference_key_port_number"
		android:title="@string/preference_port_number_title"
		android:summary="@string/preference_port_number_summary"
		android:dialogTitle="@string/preference_port_number_dialog_title"
		android:inputType="number"
		android:maxLength="5"
		android:defaultValue="@string/default_value_port_number"
	/>
	<EditTextPreference
		android:key="@string/preference_key_forwarding_url"
		android:title="@string/preference_forwarding_url_title"
		android:summary="@string/preference_forwarding_url_summary"
		android:dialogTitle="@string/preference_forwarding_url_dialog_title"
		android:inputType="text"
		android:maxLength="100"
		android:defaultValue="@string/default_value_forwarding_url"
	/>
</PreferenceScreen>
